{
  "dashboard": {
    "id": null,
    "title": "Système & Infrastructure",
    "tags": ["system", "infrastructure", "docker"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Usage CPU par Conteneur",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"hospital_.*\"}[5m]) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Usage Mémoire par Conteneur",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"hospital_.*\"} / 1024 / 1024",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Trafic Réseau",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\"hospital_.*\"}[5m])",
            "legendFormat": "{{name}} - Réception"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\"hospital_.*\"}[5m])",
            "legendFormat": "{{name}} - Transmission"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "État des Conteneurs",
        "type": "stat",
        "targets": [
          {
            "expr": "count(container_last_seen{name=~\"hospital_.*\"})",
            "legendFormat": "Conteneurs actifs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 6}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Espace Disque",
        "type": "gauge",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\"} * 100",
            "legendFormat": "{{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 16}
      },
      {
        "id": 6,
        "title": "Load Average",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Connexions Réseau",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_netstat_Tcp_CurrEstab",
            "legendFormat": "Connexions TCP établies"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Processus",
        "type": "stat",
        "targets": [
          {
            "expr": "node_procs_running",
            "legendFormat": "En cours"
          },
          {
            "expr": "node_procs_blocked",
            "legendFormat": "Bloqués"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 9,
        "title": "Uptime Système",
        "type": "stat",
        "targets": [
          {
            "expr": "node_time_seconds - node_boot_time_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 3600},
                {"color": "green", "value": 86400}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
